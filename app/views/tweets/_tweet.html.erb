<div id="<%= dom_id tweet %>">
  <div class="card text-center">
    <div class="card-header">
      <%= tweet.id %> <%= tweet.username %>
    </div>
    <div class="card-body">
    <h5 class="card-title"><%= Faker::Superhero.power %></h5>
      <p class="card-text">
        <%= tweet.description %>
      </p>
      <div class="button-group">
        <%= link_to "Editar", edit_tweet_path(tweet), class: "btn btn-primary" %>
        <%= button_to "Eliminar", tweet, class: "btn btn-danger", method: :delete %>
      </div>
    </div>
    <div class="card-footer text-body-secondary">
      <%= Time.zone.now.strftime("%Y-%m-%d %H:%M:%S") %>
    </div>
  </div>
</div>

